<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Welcome to PyORAM'
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: 'Password:'
            TextInput:
                id: password
                password: True
        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: 'Retype Password:'
            TextInput:
                id: re_password
                password: True
        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Create access'
                on_press: root.signup(password.text, re_password.text)
